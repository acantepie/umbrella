<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Umbrella\AdminBundle\Entity\BaseNotification">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="createdAt" type="datetime"/>
        <field name="iconColor" type="string" nullable="true"/>
        <field name="icon" type="string" nullable="true"/>
        <field name="title" type="string" nullable="true"/>
        <field name="text" type="text" nullable="true"/>
        <field name="url" type="string" nullable="true"/>
    </mapped-superclass>

</doctrine-mapping>
