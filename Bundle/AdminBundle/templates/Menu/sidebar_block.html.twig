{% block menu_widget %}
    {% for item in menu.root %}
        {{ block('menu_title') }}
    {% endfor %}
{% endblock %}

{% block menu_title %}
    {% if menu_is_granted_item(item) %}
        <li class="side-nav-title side-nav-item {{ item.class }}">{{ block('menu_item_label') }}</li>

        {% for item in item %}
            {{ block('menu_item') }}
        {% endfor %}
    {% endif %}
{% endblock %}

{% block menu_item %}
    {% set level = item.level %}
    {% set isTopLevel = level == 2 %}

    {% if menu_is_granted_item(item) %}
        <li class="side-nav-item {{ menu_is_current_item(item) ? 'mm-active' }} {{ item.class }}" data-lvl="{{ level }}">
            <a {{ block('menu_url') }} class="{{ isTopLevel ? 'side-nav-link' }}">
                {% if isTopLevel %}
                    {{ item.icon | icon }}
                    <span class="nav-text">{{ block('menu_item_label') }}</span>
                {% else %}
                    {{ block('menu_item_label') }}
                {% endif %}
                {% if item.hasChildren() %}
                    <span class="menu-arrow"></span>
                {% endif %}
            </a>

            {% if item.hasChildren() %}
                {% if level == 2 %}
                    {% set item_level_class = 'side-nav-second-level' %}
                {% elseif level == 3 %}
                    {% set item_level_class = 'side-nav-third-level' %}
                {% else %}
                    {% set item_level_class = 'side-nav-forth-level' %}
                {% endif %}

                <ul class="{{ item_level_class }}">
                    {% for item in item %}
                        {{ block('menu_item') }}
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% endif %}
{% endblock %}

{%- block menu_item_label -%}
    {% if item.translationDomain %}
        {{ item.label | trans([], item.translationDomain) }}
    {% else %}
        {{ item.label }}
    {% endif %}
{%- endblock -%}

{%- block menu_url -%}
    {% if item.route %}
        href="{{ path(item.route, item.routeParams) }}"
    {% else %}
        href="javascript: void(0);"
    {% endif %}
{%- endblock -%}
