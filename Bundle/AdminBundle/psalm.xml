<?xml version="1.0"?>
<psalm
        errorLevel="4"
        resolveFromConfigFile="true"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <plugins>
        <pluginClass class="Psalm\SymfonyPsalmPlugin\Plugin"/>
    </plugins>
    <issueHandlers>
        <ImplicitToStringCast errorLevel="info"/>
        <UndefinedClass>
            <errorLevel type="suppress">
                <referencedClass name="Knp\Bundle\TimeBundle\DateTimeFormatter"/>
            </errorLevel>
        </UndefinedClass>
        <InternalMethod>
            <errorLevel type="suppress">
                <referencedMethod name="Symfony\Bundle\MakerBundle\Doctrine\DoctrineHelper::getEntitiesForAutocomplete"/>
            </errorLevel>
        </InternalMethod>
    </issueHandlers>
</psalm>
